---
// src/components/Contact.astro
const contactInfo = {
	title: 'Contacto',
	description: 'Estoy disponible para nuevas oportunidades y colaboraciones. ¬°Hablemos!',
	email: 'nixonbcruzh@gmail.com',
	social: [
		{
			name: 'GitHub',
			url: 'https://github.com/nbch0203',
			icon: 'üêô'
		},
		{
			name: 'LinkedIn',
			url: 'https://www.linkedin.com/in/nixon-bolivar-cruz-hidalgo-19a078268/',
			icon: 'üíº'
		},
	]
};
---

<section id="contact">
	<div class="container">
		<div class="container_contacto">
			<h2>{contactInfo.title}</h2>
		</div>
		<p class="subtitle">{contactInfo.description}</p>
		
		<div class="contact-content">
			<div class="email-card">
				<div class="email-icon">‚úâÔ∏è</div>
				<h3>Email</h3>
				<a href={`mailto:${contactInfo.email}`} class="email-link">
					{contactInfo.email}
				</a>
			</div>
			
			<div class="social-section">
				<h3 class="social-title">Encu√©ntrame en</h3>
				<div class="social-grid">
					{contactInfo.social.map(social => (
						<a 
							href={social.url} 
							class="social-link" 
							target="_blank" 
							rel="noopener noreferrer"
							aria-label={social.name}
						>
							<span class="social-icon">{social.icon}</span>
							<span class="social-name">{social.name}</span>
							<span class="arrow">‚Üí</span>
						</a>
					))}
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	#contact {
		padding: 8rem 2rem;
		background: transparent;
		color: #ffffff;
		position: relative;
	}

	.container {
		max-width: 900px;
		margin: 0 auto;
	}

	.container_contacto {
		max-width: 600px;
		margin: 0 auto 2rem;
		text-align: center;
		position: relative;
	}

	.container_contacto::before {
		content: '';
		position: absolute;
		top: -10px;
		left: 50%;
		transform: translateX(-50%);
		width: 60px;
		height: 4px;
		background: linear-gradient(90deg, #9B7CFF 0%, #FF70B8 100%);
		border-radius: 2px;
	}

	h2 {
		font-size: clamp(2.5rem, 5vw, 3.5rem);
		margin: 2rem 0 0;
		text-align: center;
		color: #ffffff;
		font-weight: 700;
		letter-spacing: -1px;
	}

	.subtitle {
		text-align: center;
		color: rgba(255, 255, 255, 0.7);
		margin-bottom: 4rem;
		font-size: 1.15rem;
		font-weight: 400;
		max-width: 600px;
		margin-left: auto;
		margin-right: auto;
		margin-bottom: 4rem;
	}

	.contact-content {
		display: grid;
		grid-template-columns: 1fr;
		gap: 2.5rem;
	}

	/* Email Card - Destacado */
	.email-card {
		background: linear-gradient(135deg, rgba(155, 124, 255, 0.1) 0%, rgba(255, 112, 184, 0.08) 100%);
		border: 1px solid rgba(155, 124, 255, 0.3);
		padding: 3rem 2.5rem;
		border-radius: 20px;
		text-align: center;
		transition: all 0.4s ease;
		position: relative;
		overflow: hidden;
	}

	.email-card::before {
		content: '';
		position: absolute;
		top: -50%;
		left: -50%;
		width: 200%;
		height: 200%;
		background: radial-gradient(circle, rgba(155, 124, 255, 0.1) 0%, transparent 70%);
		opacity: 0;
		transition: opacity 0.4s ease;
	}

	.email-card:hover::before {
		opacity: 1;
	}

	.email-card:hover {
		border-color: rgba(155, 124, 255, 0.5);
		box-shadow: 0 12px 40px rgba(155, 124, 255, 0.2);
		transform: translateY(-4px);
	}

	.email-icon {
		font-size: 3rem;
		margin-bottom: 1rem;
		filter: drop-shadow(0 4px 8px rgba(155, 124, 255, 0.3));
		animation: float 3s ease-in-out infinite;
	}

	@keyframes float {
		0%, 100% {
			transform: translateY(0);
		}
		50% {
			transform: translateY(-10px);
		}
	}

	.email-card h3 {
		font-size: 1.4rem;
		margin-bottom: 1rem;
		color: rgba(255, 255, 255, 0.9);
		font-weight: 600;
		position: relative;
		z-index: 1;
	}

	.email-link {
		font-size: 1.4rem;
		font-weight: 600;
		color: #9B7CFF;
		transition: all 0.3s ease;
		position: relative;
		z-index: 1;
		display: inline-block;
		text-decoration: none;
	}

	.email-link:hover {
		color: #FF70B8;
		transform: scale(1.05);
	}

	.email-hint {
		margin-top: 1rem;
		font-size: 0.9rem;
		color: rgba(255, 255, 255, 0.6);
		font-style: italic;
	}

	/* Social Section */
	.social-section {
		background: rgba(255, 255, 255, 0.03);
		border: 1px solid rgba(147, 51, 234, 0.2);
		padding: 2.5rem;
		border-radius: 20px;
		transition: all 0.4s ease;
	}

	.social-section:hover {
		border-color: rgba(155, 124, 255, 0.3);
		box-shadow: 0 8px 32px rgba(147, 51, 234, 0.12);
	}

	.social-title {
		font-size: 1.4rem;
		margin-bottom: 2rem;
		text-align: center;
		color: rgba(255, 255, 255, 0.95);
		font-weight: 600;
		position: relative;
		padding-bottom: 1rem;
	}

	.social-title::after {
		content: '';
		position: absolute;
		bottom: 0;
		left: 50%;
		transform: translateX(-50%);
		width: 50px;
		height: 3px;
		background: linear-gradient(90deg, #9B7CFF 0%, #FF70B8 100%);
		border-radius: 2px;
	}

	.social-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 1.25rem;
	}

	.social-link {
		display: flex;
		align-items: center;
		gap: 1rem;
		padding: 1.5rem 1.75rem;
		background: rgba(155, 124, 255, 0.08);
		border: 1px solid rgba(155, 124, 255, 0.25);
		border-radius: 12px;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		color: rgba(255, 255, 255, 0.9);
		font-weight: 500;
		text-decoration: none;
		position: relative;
		overflow: hidden;
	}

	.social-link::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(90deg, transparent, rgba(155, 124, 255, 0.15), transparent);
		transition: left 0.5s ease;
	}

	.social-link:hover::before {
		left: 100%;
	}

	.social-link:hover {
		background: rgba(155, 124, 255, 0.15);
		border-color: rgba(155, 124, 255, 0.5);
		transform: translateX(8px);
		box-shadow: 0 4px 20px rgba(155, 124, 255, 0.25);
	}

	.social-icon {
		font-size: 2rem;
		flex-shrink: 0;
		transition: transform 0.3s ease;
	}

	.social-link:hover .social-icon {
		transform: scale(1.2) rotate(5deg);
	}

	.social-name {
		flex: 1;
		font-size: 1.05rem;
	}

	.arrow {
		font-size: 1.25rem;
		opacity: 0;
		transform: translateX(-10px);
		transition: all 0.3s ease;
	}

	.social-link:hover .arrow {
		opacity: 1;
		transform: translateX(0);
	}

	@media (max-width: 768px) {
		#contact {
			padding: 5rem 1.5rem;
		}

		.contact-content {
			gap: 2rem;
		}

		.social-grid {
			grid-template-columns: 1fr;
		}

		.email-card {
			padding: 2.5rem 2rem;
		}

		.social-section {
			padding: 2rem 1.5rem;
		}

		.social-link {
			padding: 1.25rem 1.5rem;
		}
	}
</style>