---
// src/components/Projects.astro
const projects = [
	{
		title: 'Repositorio DAM',
		description: 'Descripción breve del proyecto y las tecnologías utilizadas',
		image: '/Repositorio_DAM.webp', 
		link: 'https://github.com/nbch0203/DAM',
		tags: ['Java', 'HTML', 'CSS', 'JavaScript', 'MySQL','Android','C#',' .NET', 'WPF', 'AWS',
		'SQLite',]
	},
	{
		title:'Portafolio Personal',
		description: 'Mi portafolio personal desarrollado con Astro para mostrar mis proyectos y habilidades.',
		image: '/imagen_portfolio.webp', 
		link: 'https://github.com/nbch0203/Portfolio',
		tags: ['Astro', 'JavaScript', 'CSS', 'HTML']
	},
	{
		title: 'App de Cine',
		description: 'Aplicación de escritorio para la gestión de un cine, incluyendo reservas, carteleras y usuarios.',
		image: '/App-Cine.webp', 
		link: 'https://github.com/nbch0203/App-de-cine',
		tags: ['C#', '.NET', 'WPF', 'MySQL', 'AWS']
	}

];
---

<section id="projects">
	<div class="container">
		<div class="contenedor_proyectos"><h2>Proyectos</h2></div>
		
		<p class="subtitle">Algunos de los proyectos en los que he trabajado</p>
		
		<div class="projects-grid">
			{projects.map(project => (
				<article class="project-card">
					<div class="project-image">
						<img src={project.image} alt={project.title} />
					</div>
					<div class="project-content">
						<h3>{project.title}</h3>
						<p>{project.description}</p>
						<div class="project-tags">
							{project.tags.map(tag => (
								<span class="tag">{tag}</span>
							))}
						</div>
						<a href={project.link} class="project-link" target="_blank" rel="noopener">
							Ver proyecto →
						</a>
					</div>
				</article>
			))}
		</div>
	</div>
</section>

<style>
	#projects {
		padding: 8rem 2rem;
		background: transparent;
		color: #ffffff;
		position: relative;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
	}
	
	.contenedor_proyectos {
		max-width: 600px;
		margin: 0 auto 2rem;
		text-align: center;
		position: relative;
	}

	.contenedor_proyectos::before {
		content: '';
		position: absolute;
		top: -10px;
		left: 50%;
		transform: translateX(-50%);
		width: 60px;
		height: 4px;
		background: linear-gradient(90deg, #9B7CFF 0%, #FF70B8 100%);
		border-radius: 2px;
	}

	h2 {
		font-size: clamp(2.5rem, 5vw, 3.5rem);
		margin: 2rem 0 0;
		text-align: center;
		color: #ffffff;
		font-weight: 700;
		letter-spacing: -1px;
	}

	.subtitle {
		text-align: center;
		color: rgba(255, 255, 255, 0.7);
		margin-bottom: 4rem;
		font-size: 1.1rem;
		font-weight: 400;
	}

	/* Grid de proyectos */
	.projects-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
		gap: 2.5rem;
	}

	.project-card {
		background: rgba(255, 255, 255, 0.03);
		border: 1px solid rgba(147, 51, 234, 0.2);
		border-radius: 16px;
		overflow: hidden;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		color: #ffffff;
		position: relative;
	}

	.project-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(135deg, rgba(155, 124, 255, 0.05) 0%, rgba(255, 112, 184, 0.05) 100%);
		opacity: 0;
		transition: opacity 0.4s ease;
		pointer-events: none;
	}

	.project-card:hover::before {
		opacity: 1;
	}

	.project-card:hover {
		transform: translateY(-8px);
		border-color: rgba(155, 124, 255, 0.4);
		box-shadow: 0 12px 40px rgba(155, 124, 255, 0.2);
	}

	.project-image {
		width: 100%;
		height: 220px;
		overflow: hidden;
		position: relative;
	}

	.project-image::after {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(180deg, transparent 0%, rgba(10, 1, 24, 0.3) 100%);
	}

	.project-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.4s ease;
	}

	.project-card:hover .project-image img {
		transform: scale(1.08);
	}

	.project-content {
		padding: 2rem;
	}

	.project-content h3 {
		font-size: 1.5rem;
		margin-bottom: 0.75rem;
		color: #ffffff;
		font-weight: 600;
	}

	.project-content p {
		color: rgba(255, 255, 255, 0.7);
		margin-bottom: 1.5rem;
		line-height: 1.6;
		font-size: 0.95rem;
	}

	/* Tags de tecnologías */
	.project-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		margin-bottom: 1.5rem;
	}

	.tag {
		background: rgba(155, 124, 255, 0.15);
		padding: 0.4rem 0.85rem;
		border-radius: 6px;
		font-size: 0.8rem;
		color: rgba(255, 255, 255, 0.9);
		border: 1px solid rgba(155, 124, 255, 0.3);
		font-weight: 500;
		transition: all 0.3s ease;
	}

	.tag:hover {
		background: rgba(155, 124, 255, 0.25);
		border-color: rgba(155, 124, 255, 0.5);
	}

	.project-link {
		color: #9B7CFF;
		font-weight: 600;
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		transition: all 0.3s ease;
		font-size: 0.95rem;
	}

	.project-link:hover {
		gap: 0.75rem;
		color: #FF70B8;
	}

	/* Responsive */
	@media (max-width: 768px) {
		#projects {
			padding: 5rem 1.5rem;
		}

		.projects-grid {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.project-content {
			padding: 1.5rem;
		}
	}
</style>