---
// src/components/Hero.astro
// PERSONALIZA: Tu información personal
const personalInfo = {
	name: 'Nixon Bolivar Cruz Hidalgo',
	title: 'Desarrollador de aplicaciones multiplataforma',
	description: 'Especializado en crear experiencias web modernas y accesibles',
	cta: {
		primary: 'Mis proyectos',
		secondary: 'Contacto'
	}
};
---

<section id="hero">
	<div class="hero-back ground"></div>
	<div class="hero-content">
		<h1>
			Hola, soy <span class="highlight">{personalInfo.name}</span>
		</h1>
		<h2>{personalInfo.title}</h2>
		<p>{personalInfo.description}</p>
		
		<div class="hero-buttons">
			<a href="#projects" class="btn btn-primary">
				{personalInfo.cta.primary}
			</a>
			<a href="#contact" class="btn btn-secondary">
				{personalInfo.cta.secondary}
			</a>
		</div>
	</div>
</section>

<style>
	/* PERSONALIZA AQUÍ LA SECCIÓN HERO */
	#hero {
		background-color: #0e0620;
		position: relative;
		min-height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 2rem;
		overflow: hidden;
	}

	/* Fondo con degradado - Puedes cambiar los colores */
	/* Fondo oscuro legible */
	.hero-background,
	.hero-back,
	.ground {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		/* color base #120727 con ligera textura de degradado para profundidad */
		background: radial-gradient(circle at 10% 20%, rgba(139, 92, 246, 0.06), transparent 15%),
					linear-gradient(180deg, #120727 0%, #0e0620 100%);
		z-index: -1;
	}

	#hero {
		color: #E6EDF9; /* texto principal claro para buen contraste */
	}

	.hero-content {
		max-width: 800px;
		text-align: center;
	}

	h1 {
		font-size: clamp(2rem, 5vw, 4rem);
		margin-bottom: 1rem;
		color: #FFFFFF; /* título bien visible */
	}

	/* Texto destacado - gradiente visible sobre fondo oscuro */
	.highlight {
		background: linear-gradient(90deg, #9B7CFF 0%, #FF70B8 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	h2 {
		font-size: clamp(1.5rem, 3vw, 2.5rem);
		font-weight: 400;
		margin-bottom: 1.5rem;
		color: #D7E3FF;
	}

	p {
		font-size: clamp(1rem, 2vw, 1.25rem);
		margin-bottom: 2rem;
		color: #C8D6FF;
	}

	/* Botones - colores diferenciados y con buen contraste */
	.hero-buttons {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	.btn {
		padding: 1rem 2rem;
		border-radius: 10px;
		font-weight: 500;
		transition: all 0.25s ease;
		cursor: pointer;
		border: none;
	}

	/* Botón primario: vibrante (púrpura/rosado) */
	.btn-primary {
		background: linear-gradient(90deg, #7B61FF 0%, #FF5EC4 100%);
		color: #120727;
		box-shadow: 0 8px 20px rgba(123, 97, 255, 0.18);
	}

	.btn-primary:hover {
		transform: translateY(-3px);
		box-shadow: 0 14px 30px rgba(123, 97, 255, 0.25);
	}

	/* Botón secundario: cian/outline para diferenciar claramente */
	.btn-secondary {
		background: transparent;
		border: 2px solid rgba(0, 229, 255, 0.9);
		color: rgba(0, 229, 255, 0.95);
	}

	.btn-secondary:hover {
		background: rgba(0, 229, 255, 0.95);
		color: #120727;
		transform: translateY(-2px);
	}

	/* Responsive */
	@media (max-width: 768px) {
		#hero {
			min-height: 80vh;
		}

		.hero-buttons {
			flex-direction: column;
		}

		.btn {
			width: 100%;
		}
	}
</style>