---
// src/components/About.astro
const aboutInfo = {
	title: 'Sobre mí',
	description_general: `Soy un desarrollador apasionado por crear soluciones web 
				  innovadoras. Me encanta aprender nuevas tecnologías y 
				  resolver problemas complejos.`,
	descripcion_programas: `He aprendido a utilizar diversas herramientas y programas 
						   que me permiten desarrollar proyectos de alta calidad 
						   y mantenerme actualizado en el campo de la tecnología.`,
	lenguajes: [
		'JavaScript',
		'Java',
		'HTML/CSS',
		'SQL',
		'Bash/Shell Scripting',
		'XML',
		'JSON',
		'C#',
	],
	frameworks: [
		'Vue.js',
		'Node.js',
		'Astro',
		'Spring Boot',
	],
	programs: [
		'Visual Studio Code',
		'IntelliJ IDEA',
		'Android Studio',
		'Git',
		'GitHub',
		'Docker',
		'AWS',
		'Azure',
		'Linux',
		'Postman',
		'MySQL Workbench',
		'DBeaver',
		'Eclipse',
		'Vercel',
		'WordPress',
	]
};
---

<section id="about">
	<div class="container">
		<div class="sobre_mi">
			<h2>{aboutInfo.title}</h2>
		</div>
		<div class="about-content">
			<div class="about-text">
				<p>{aboutInfo.description_general}</p>
			</div>
			
			<div class="about-programs-grid">
				<h3 class="texto_habilidades">Programas aprendidos</h3>
				<div class="skills-grid">
					{aboutInfo.programs.map(program => (
						<div class="skill-item">{program}</div>
					))}
				</div>
			</div>

			<div class="about-frameworks-grid">
				<h3 class="texto_habilidades">Frameworks</h3>
				<div class="skills-grid">
					{aboutInfo.frameworks.map(framework => (
						<div class="skill-item">{framework}</div>
					))}
				</div>
			</div>

			<div class="about-lenguajes-grid">
				<h3 class="texto_habilidades">Lenguajes de programación</h3>
				<div class="about-text">
				<p class="lenguajes-text">{aboutInfo.descripcion_programas}</p>
			</div>

				<div class="skills-grid">
					{aboutInfo.lenguajes.map(language => (
						<div class="skill-item">{language}</div>
					))}
				</div>
			</div>

			
		</div>
	</div>
</section>

<style>
	#about {
		padding: 8rem 2rem;
		background: transparent;
		color: #ffffff;
		position: relative;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
	}

	.sobre_mi {
		max-width: 600px;
		margin: 0 auto 5rem;
		text-align: center;
		position: relative;
	}

	.sobre_mi::before {
		content: '';
		position: absolute;
		top: -10px;
		left: 50%;
		transform: translateX(-50%);
		width: 60px;
		height: 4px;
		background: linear-gradient(90deg, #9B7CFF 0%, #FF70B8 100%);
		border-radius: 2px;
	}

	h2 {
		font-size: clamp(2.5rem, 5vw, 3.5rem);
		margin: 2rem 0 1rem;
		color: #ffffff;
		font-weight: 700;
		letter-spacing: -1px;
	}

	.about-content {
		display: grid;
		grid-template-columns: 1fr;
		gap: 4rem;
	}

	.about-text {
		text-align: center;
		max-width: 800px;
		margin: 0 auto 3rem;
	}

	.about-text p {
		font-size: 1.15rem;
		line-height: 1.8;
		color: rgba(255, 255, 255, 0.85);
	}

	.about-programs-grid,
	.about-frameworks-grid,
	.about-lenguajes-grid {
		background: rgba(147, 51, 234, 0.05);
		border: 1px solid rgba(147, 51, 234, 0.15);
		border-radius: 16px;
		padding: 3rem 2.5rem;
		backdrop-filter: blur(10px);
		transition: all 0.3s ease;
	}

	.about-programs-grid:hover,
	.about-frameworks-grid:hover,
	.about-lenguajes-grid:hover {
		border-color: rgba(147, 51, 234, 0.3);
		box-shadow: 0 8px 32px rgba(147, 51, 234, 0.1);
		transform: translateY(-2px);
	}

	.texto_habilidades {
		font-size: 1.75rem;
		margin-bottom: 2rem;
		color: #ffffff;
		font-weight: 600;
		text-align: center;
		position: relative;
		padding-bottom: 1rem;
	}

	.texto_habilidades::after {
		content: '';
		position: absolute;
		bottom: 0;
		left: 50%;
		transform: translateX(-50%);
		width: 50px;
		height: 3px;
		background: linear-gradient(90deg, #9B7CFF 0%, #FF70B8 100%);
		border-radius: 2px;
	}

	.lenguajes-text {
		text-align: center;
		margin-bottom: 2rem;
		font-size: 1.05rem;
		color: rgba(255, 255, 255, 0.75);
		line-height: 1.7;
	}

	.skills-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
		gap: 1rem;
	}

	.skill-item {
		background: rgba(255, 255, 255, 0.05);
		color: #ffffff;
		padding: 1rem 1.25rem;
		border-radius: 10px;
		text-align: center;
		font-weight: 500;
		font-size: 0.95rem;
		border: 1px solid rgba(255, 255, 255, 0.08);
		transition: all 0.3s ease;
		position: relative;
		overflow: hidden;
	}

	.skill-item::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(90deg, transparent, rgba(155, 124, 255, 0.2), transparent);
		transition: left 0.5s ease;
	}

	.skill-item:hover::before {
		left: 100%;
	}

	.skill-item:hover {
		transform: translateY(-4px);
		background: rgba(155, 124, 255, 0.15);
		border-color: rgba(155, 124, 255, 0.4);
		box-shadow: 0 4px 20px rgba(155, 124, 255, 0.2);
	}

	@media (max-width: 968px) {
		.skills-grid {
			grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
		}
	}

	@media (max-width: 768px) {
		#about {
			padding: 5rem 1.5rem;
		}

		.about-programs-grid,
		.about-frameworks-grid,
		.about-lenguajes-grid {
			padding: 2rem 1.5rem;
		}

		.about-content {
			gap: 2.5rem;
		}

		.skills-grid {
			grid-template-columns: repeat(auto-fit, minmax(110px, 1fr));
			gap: 0.75rem;
		}

		.skill-item {
			padding: 0.85rem 1rem;
			font-size: 0.9rem;
		}
	}
</style>
