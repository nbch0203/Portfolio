---
// src/components/About.astro
// PERSONALIZA: Tu información "Sobre mí"
const aboutInfo = {
	title: 'Sobre mí',
	description: `Soy un desarrollador apasionado por crear soluciones web 
	              innovadoras. Me encanta aprender nuevas tecnologías y 
	              resolver problemas complejos.`,
	skills: [
		'JavaScript',
		'Java',
		'Angular',
		'vue.js',
		'Python',
		'Docker',
		'HTML/CSS',
		'Git & GitHub',
		'Bases de datos SQL',
        'Desarrollo Android',
        'Administración de sistemas',
        'Administración en la nube'
	]
};
---

<section id="about">
	<div class="container">
		<div class ="sobre_mi"><h2>{aboutInfo.title}

		</h2>
		</div>
		
		<div class="about-content">
			<div class="about-text">
				<p>{aboutInfo.description}</p>
			</div>
			
			<div class="about-skills">
				<h3 class="texto_habilidades">Habilidades</h3>
				<div class="skills-grid">
					{aboutInfo.skills.map(skill => (
						<div class="skill-item">{skill}</div>
					))}
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	/* PERSONALIZA AQUÍ LA SECCIÓN ABOUT */
	#about {
		padding: 5rem 2rem;
		/* Sin fondo, se ve el gradiente continuo */
		background: transparent;
		color: #ffffff;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
	}

	/* Encabezado "Sobre mí" con acento púrpura (similar al del Hero) */
	.sobre_mi {
		width: 40%;
		margin: 0 auto;
		text-align: center;
		margin-bottom: 3rem;
		background: linear-gradient(135deg, #8a6fbb 0%, #d0547a 100%);
		color: #ffffff;
		border-radius: 24px;
		padding: 0.75rem 1.25rem;
		display: flex;
		justify-content: center;
		align-items: center;
		position: relative;
		transition: all 0.3s ease;
	}

	.sobre_mi:hover {
		border: 2px solid rgba(123, 97, 255, 0.95);
		box-shadow: 0 6px 20px rgba(139, 92, 246, 0.18),
					0 10px 40px rgba(123, 97, 255, 0.10);
		transform: translateY(-4px);
	}

	@keyframes neonGlow {
		0% {
			box-shadow: 0 0 6px rgba(139, 92, 246, 0.25);
		}
		50% {
			box-shadow: 0 0 12px rgba(123, 97, 255, 0.30);
		}
		100% {
			box-shadow: 0 0 6px rgba(139, 92, 246, 0.25);
		}
	}

	h2 {
		font-size: clamp(2rem, 4vw, 3rem);
		margin-top: 1rem ;
		text-align: center;
		margin-bottom: 1rem;
		color: #ffffff;
	}

	.about-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 3rem;
		align-items: start;
	}

	.about-text p {
		font-size: 1.125rem;
		line-height: 1.8;
		color: #E6EDF9;
		background: rgba(255,255,255,0.0);
	}

	.texto_habilidades {
		font-size: 1.5rem;
		margin-bottom: 1.5rem;
		color: #E6EDF9;
	}

	/* Grid de habilidades */
	.skills-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
		gap: 1rem;
	}

	.skill-item {
		background: linear-gradient(135deg, #2a2d3e 0%, #444863 100%);
		color: #ffffff;
		padding: 1rem;
		border-radius: 8px;
		text-align: center;
		font-weight: 500;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
		transition: all 0.3s ease;
		border: 1px solid rgba(255, 255, 255, 0.1);
	}

	.skill-item:hover {
		transform: translateY(-4px);
		box-shadow: 0 4px 12px rgba(139, 92, 246, 0.3);
		border-color: rgba(139, 92, 246, 0.5);
	}

	/* Responsive */
	@media (max-width: 768px) {
		#about {
			padding: 3rem 1.5rem;
		}

		.about-content {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.skills-grid {
			grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
		}
	}
</style>