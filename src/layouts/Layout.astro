---
// src/layouts/Layout.astro
import  SpeedInsights  from "@vercel/speed-insights/astro";
import Analytics from '@vercel/analytics/astro'
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Portfolio Nixon Cruz</title>
    <slot name="head" />
  </head>

  <body>
    <slot />

    <!-- Speed Insights: métrica de rendimiento de Vercel -->
    <SpeedInsights />
	<Analytics />
  </body>
</html>

<style is:global>
	/* Variables CSS */
	:root {
		--color-primary: #9333ea;
		--color-secondary: #bc52ee;
		--color-text: #ffffff;
		--color-text-light: #e2e2e2;
		--color-background: #1a0b2e;
		--color-section-border: rgba(147, 51, 234, 0.2);
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html,
	body {
		width: 100%;
		height: 100%;
		font-family: Inter, Roboto, 'Helvetica Neue', Arial, sans-serif;
		color: var(--color-text);
	}

	body {
		background: 
			/* Capas de gradiente para profundidad */
			radial-gradient(circle at 20% 30%, rgba(147, 51, 234, 0.08), transparent 40%),
			radial-gradient(circle at 80% 70%, rgba(188, 82, 238, 0.06), transparent 40%),
			/* Gradiente base más oscuro y profesional */
			linear-gradient(135deg, 
				#0a0118 0%,
				#1a0b2e 25%,
				#1a0b2e 75%,
				#0a0118 100%
			);
		background-attachment: fixed;
		min-height: 100vh;
		padding-top: 70px;
	}

	/* Efecto de grano sutil */
	body::before {
		content: '';
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-image: 
			repeating-linear-gradient(0deg, transparent, transparent 2px, rgba(255,255,255,0.01) 2px, rgba(255,255,255,0.01) 4px);
		pointer-events: none;
		opacity: 0.3;
		z-index: 1;
	}

	/* Contenido sobre el grano */
	body > * {
		position: relative;
		z-index: 2;
	}

	h1, h2, h3, h4, h5, h6 {
		line-height: 1.2;
		font-weight: 600;
		color: var(--color-secondary);
	}

	p {
		line-height: 1.6;
	}

	a {
		color: var(--color-secondary);
		text-decoration: none;
		transition: all 0.3s ease;
	}

	a:hover {
		opacity: 0.8;
	}
</style>